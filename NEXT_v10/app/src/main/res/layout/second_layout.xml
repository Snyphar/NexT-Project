<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_height="65dp"
        android:layout_width="match_parent"
        android:id="@+id/status"
        android:text="Disconnected..."
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Connect"
        android:textSize="40dp"
        android:id="@+id/connected"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:id="@+id/ouput"
        android:layout_marginBottom="10dp"
        android:text="Input: "
        android:textSize="30dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TableRow>

                <TextView
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="match_parent"

                    android:text="RELAY01"
                    android:textSize="30dp"
                    />
                <ToggleButton
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/relay01"
                    />


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="match_parent"

                    android:text="RELAY02"
                    android:textSize="30dp"
                    />
                <ToggleButton
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/relay02"
                    />
            </TableRow>

            <TableRow android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"

                    android:text="RELAY03"
                    android:textSize="30dp" />

                <ToggleButton
                    android:id="@+id/relay03"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp" />
            </TableRow>

            <TableRow android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"

                    android:text="LIGHT0"
                    android:textSize="30dp" />

                <ToggleButton
                    android:id="@+id/light0"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp" />
            </TableRow>
            <TableRow android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"

                    android:text="LIGHT1"
                    android:textSize="30dp" />

                <ToggleButton
                    android:id="@+id/light1"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp" />
            </TableRow>
            <TableRow android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"

                    android:text="LIGHT2"
                    android:textSize="30dp" />

                <ToggleButton
                    android:id="@+id/light2"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp" />
            </TableRow>
            <TableRow android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="23dp"

                    android:text="LIGHT3"
                    android:textSize="30dp" />

                <ToggleButton
                    android:id="@+id/light3"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp" />
            </TableRow>



        </TableLayout>

    </ScrollView>





</LinearLayout>